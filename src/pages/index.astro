---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import PostPreview from '../components/PostPreview';
import HomeHeader from '../components/HomeHeader';

// Component Script:
let title = 'Rafael Morais';
let description = 'Rafael Morais personal portfolio and blog.';
let permalink = 'https://rafael.no/';

// Data Fetching: List all Markdown posts in the repo.

let allPosts = await Astro.glob('./posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
---

<html lang="en">

<head>
  <BaseHead {title} {description} {permalink} />

  <style>
    header {
      width: 100%;
      height: 100%;
      background-color: var(--theme-bg-offset);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .content {
      margin-top: 4rem;
      margin-bottom: 8rem;
    }

    .content :global(main > * + *) {
      margin-top: 1rem;
    }

    .intro {
      padding-bottom: 4rem;
      margin-bottom: 2rem;
      border-bottom: 4px solid var(--theme-divider);
    }

    .intro>* {
      margin: 0;
    }

    .latest {
      font-size: 2.5rem;
      font-weight: 700;
    }
  </style>
</head>

<body>
  <div id="content">
    <!-- HEADER -->
    <HomeHeader />

    <!-- POSTS LIST -->
    <section class="previews" aria-label="Blog post list">
      {allPosts.map((p) =>
      <PostPreview post={p} />)}
    </section>
  </div>
</body>

</html>